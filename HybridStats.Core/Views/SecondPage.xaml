<?xml version="1.0" encoding="utf-8" ?>
<views:BasePage  xmlns="http://xamarin.com/schemas/2014/forms"
                 xmlns:views="clr-namespace:HybridStats.Core.Views"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 xmlns:ViewModels="clr-namespace:HybridStats.Core.ViewModels"
                 x:TypeArguments="ViewModels:SecondViewModel"
                 x:Class="HybridStats.Core.Views.SecondPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Label Text="{Binding UserName}" TextColor="Green"/>
            
            <Button Text="Next" Command="{Binding NextPageCommand}"/>
            <Button Text="Button 2" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</views:BasePage>